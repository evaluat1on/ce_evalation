<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">

    <ImageView
            android:layout_width="312dp"
            android:layout_height="104dp" app:srcCompat="@drawable/logo3" android:id="@+id/imageView"
            tools:layout_editor_absoluteY="221dp" tools:layout_editor_absoluteX="47dp"/>
    <EditText
            android:hint="your-email@gmail.com"
            android:layout_width="313dp"
            android:layout_height="52dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2" tools:layout_editor_absoluteY="343dp" tools:layout_editor_absoluteX="47dp"/>
    <EditText
            android:hint="password"
            android:layout_width="317dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3" tools:layout_editor_absoluteY="412dp" tools:layout_editor_absoluteX="47dp"/>
    <Button
            android:text="SIGN IN"
            android:layout_width="160dp"
            android:layout_height="38dp" android:id="@+id/button" tools:layout_editor_absoluteY="480dp"
            tools:layout_editor_absoluteX="122dp"/>
    <TextView
            android:text="  Forgot your password?"
            android:layout_width="176dp"
            android:layout_height="24dp" android:id="@+id/textView" tools:layout_editor_absoluteY="543dp"
            tools:layout_editor_absoluteX="117dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="top"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier2" app:barrierDirection="top"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier3" app:barrierDirection="left"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier4" app:barrierDirection="top"/>

</android.support.constraint.ConstraintLayout>