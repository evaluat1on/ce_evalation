<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu_teacher" android:background="#F0ECF4">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <android.support.v7.widget.CardView
            android:layout_width="378dp"
            android:layout_height="104dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="20dp"
            android:id="@+id/CardViewId">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="104dp">

            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="89dp"
                    app:srcCompat="@drawable/estimate"
                    android:id="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.035"/>
            <TextView
                    android:text="ประเมินผลการเรียน"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_a"
                    app:layout_constraintBottom_toBottomOf="@+id/image_subjects"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginStart="8dp"
                    android:textSize="25sp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.468"
                    android:textColor="#FD0E0D0D" android:layout_marginTop="24dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="378dp"
                android:layout_height="104dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp"
                android:id="@+id/CardViewId2">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="104dp">

                <ImageView
                        android:layout_width="90dp"
                        android:layout_height="89dp"
                        app:srcCompat="@drawable/estimate"
                        android:id="@+id/imageView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.035"/>
                <TextView
                        android:text="สรุปผลการประเมิน"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_a2"
                        app:layout_constraintBottom_toBottomOf="@+id/image_subjects"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        android:layout_marginStart="8dp"
                        android:textSize="25sp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.468"
                        android:textColor="#FD0E0D0D" android:layout_marginTop="24dp"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

