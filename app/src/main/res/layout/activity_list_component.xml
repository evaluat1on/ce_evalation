<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".evaluation.List_component">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button"/>
            <TextView
                    android:text="59161235"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
                    android:textSize="36sp" android:textColor="#000000"/>
        </LinearLayout>
        <TextView
                android:text="Midterm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="24sp"
                android:textColor="#000000" android:textAlignment="viewStart"/>
        <TextView
                android:text="Score : 80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <TextView
                android:text="Full score : 80       Percent : 201"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>