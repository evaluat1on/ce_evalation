<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Update_Grade">
    <Button
            android:text="บันทึก"
            android:layout_width="215dp"
            android:layout_height="45dp" android:id="@+id/button" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.18"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="386dp"
            android:layout_height="53dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintVertical_bias="0.039"
            android:id="@+id/linearLayout2">
        <android.support.constraint.ConstraintLayout
                android:layout_width="161dp"
                android:layout_height="278dp" android:layout_weight="1">

            <TextView
                    android:text="เกรด"
                    android:layout_width="117dp"
                    android:layout_height="51dp" android:id="@+id/textView2" android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="22dp" android:layout_marginTop="4dp" android:layout_marginStart="16dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="298dp"
                android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="254dp"
                    android:layout_height="match_parent"
                    android:hint="กรอกเกรด" android:id="@+id/grade"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>