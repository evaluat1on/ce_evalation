<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu_report">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="422dp"
            android:layout_height="99dp" tools:layout_editor_absoluteX="-8dp" tools:layout_editor_absoluteY="56dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/recipe_list_thumbnail"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Picture Detail"
                    android:scaleType="centerInside"
                    tools:src="@mipmap/ic_launcher"/>
            <RelativeLayout
                    android:id="@+id/recipe_list_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/recipe_list_thumbnail">

                <TextView
                        android:id="@+id/recipe_list_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="2dp"
                        android:textSize="18sp"
                        tools:text="รายบุคคล"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="435dp"
            android:layout_height="281dp"
            tools:layout_editor_absoluteX="-9dp"
            tools:layout_editor_absoluteY="56dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/recipe_list_thumbnail"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Picture Detail"
                    android:scaleType="centerInside"
                    tools:src="@mipmap/ic_launcher"/>
            <RelativeLayout
                    android:id="@+id/recipe_list_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/recipe_list_thumbnail">

                <TextView
                        android:id="@+id/recipe_list_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="2dp"
                        android:textSize="18sp"
                        tools:text="รายวิชา"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar">
        <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20dp" android:textColor="#131212" tools:layout_editor_absoluteY="14dp"
                tools:layout_editor_absoluteX="16dp"/>

    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>