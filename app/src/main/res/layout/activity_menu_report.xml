<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".result.Menu_report">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <android.support.v7.widget.CardView
                android:layout_width="378dp"
                android:layout_height="104dp"
                android:layout_marginTop="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:id="@+id/CardView_estimate">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="101dp">

                <ImageView
                        android:layout_width="90dp"
                        android:layout_height="89dp"
                        app:srcCompat="@drawable/result"
                        android:id="@+id/image_estimate"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.035"/>
                <TextView
                        android:text="รายบุคคล"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_estimate"
                        app:layout_constraintBottom_toBottomOf="@+id/image_estimate"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintTop_toTopOf="@+id/image_estimate"
                        app:layout_constraintStart_toEndOf="@+id/image_estimate"
                        android:layout_marginStart="8dp"
                        android:textSize="25sp" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.468"
                        android:textColor="#FD0E0D0D"
                />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="381dp"
                android:layout_height="102dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:id="@+id/CardView_result">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="101dp">

                <ImageView
                        android:layout_width="90dp"
                        android:layout_height="89dp"
                        app:srcCompat="@drawable/result"
                        android:id="@+id/image_result"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.035"/>
                <TextView
                        android:text="รายวิชา"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_result"
                        app:layout_constraintBottom_toBottomOf="@+id/image_result"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintTop_toTopOf="@+id/image_result"
                        app:layout_constraintStart_toEndOf="@+id/image_result"
                        android:layout_marginStart="8dp"
                        android:textSize="25sp" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.468"
                        android:textColor="#F8090808"
                />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>