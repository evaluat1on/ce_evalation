<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dashboard.Dashboard">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                            android:layout_height="138dp"
                                            android:layout_marginTop="20dp"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginEnd="20dp"
                                            android:layout_marginBottom="10dp"
                                            app:cardCornerRadius="10dp"
                                            app:cardElevation="20dp"
                                            android:id="@+id/CardStudent"
                                            android:backgroundTint="#59D53030" android:backgroundTintMode="src_atop">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView android:src="@drawable/estimate"
                           android:layout_width="125dp"
                           android:layout_height="128dp"
                           android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                           android:layout_marginStart="16dp"
                           app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                           android:id="@+id/imageCardStudent" android:layout_marginBottom="8dp"
                           app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
                <TextView

                        android:textSize="25dp"
                        android:text="ประเมินผลกาาเรียน"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewCardStudent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                        app:layout_constraintTop_toTopOf="@+id/imageCardStudent"
                        app:layout_constraintBottom_toBottomOf="@+id/imageCardStudent"
                        app:layout_constraintStart_toEndOf="@+id/imageCardStudent" android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.508"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp"
                android:id="@+id/CardTeacher" android:backgroundTint="#F0B7B7">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="125dp"
                        android:layout_height="128dp" app:srcCompat="@drawable/result"
                        android:id="@+id/imageCardTeacher"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.035"/>
                <TextView
                        android:text="สรุปผลการประเมิน"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewCardTeacher"
                        app:layout_constraintBottom_toBottomOf="@+id/imag_estimate"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                        app:layout_constraintTop_toTopOf="@+id/imageCardTeacher"
                        app:layout_constraintStart_toEndOf="@+id/imageCardTeacher" android:layout_marginStart="8dp"
                        android:textSize="25sp" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.468"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                            android:layout_height="161dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginEnd="20dp"
                                            android:layout_marginBottom="20dp"
                                            app:cardCornerRadius="8dp"
                                            app:cardElevation="20dp"
                                            android:id="@+id/CardSubject"
                                            android:backgroundTint="#F0B7B7">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="376dp"
                    android:layout_height="146dp">

                <ImageView android:src="@drawable/estimate"
                           android:layout_width="125dp"
                           android:layout_height="128dp"
                           android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                           android:layout_marginStart="16dp"
                           app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                           android:id="@+id/imageViewSubject" android:layout_marginBottom="8dp"
                           app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
                <TextView

                        android:textSize="25dp"
                        android:text="ประเมินผลกาาเรียน"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewSubject"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                        app:layout_constraintTop_toTopOf="@+id/imageViewSubject"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewSubject"
                        app:layout_constraintStart_toEndOf="@+id/imageViewSubject" android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.508"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>